<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/stepNumberTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X: "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/recipeStepTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add ingredients to recipe thenaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa sorry this needed to be long to test multiple new lines"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Remove button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/removeStepBtn"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:background="@drawable/red_circle_button_background"
        android:text="X"
        android:layout_gravity="center_vertical"/>
</LinearLayout>