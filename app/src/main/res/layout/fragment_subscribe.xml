<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">


    <TextView
        android:id="@+id/subscribeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subscribe Now "
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@color/Tomato"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/subscribeSecondTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Journey Begins Here "
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/Tomato"
        android:gravity="center"
        android:layout_marginBottom="16dp" />


    <!-- Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/white"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- subscribe price -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$4.99/month"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/DarkOrange"
                android:layout_marginBottom="12dp" />

            <!-- 权益列表 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Unlimited Access\n• No Ads\n• Exclusive Recipes\n• Early Access to Features"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:gravity="start"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <!-- user aggrement -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <CheckBox
            android:id="@+id/agreeCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/blue"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I agree to the Terms and Conditions"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        >
    <Button
        android:id="@+id/subscribeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Subscribe Now"
        android:textStyle="bold"
        android:layout_marginRight="30dp"
        android:backgroundTint="@color/DarkOrange"
        android:textColor="@color/white" />
    <Button
        android:id="@+id/cancelSubscribeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Cancel Subscribe"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:backgroundTint="@color/DarkOrange"
        android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>