+                return "1/2";
+            case ONE_THIRD:
+                return "1/3";
+            case TWO_THIRDS:
+                return "2/3";
+            case ONE_QUARTER:
+                return "1/4";
+            case THREE_QUARTERS:
+                return "3/4";
+            default:
+                return "None";
+        }
+    }
+    public String altToString() {
+
+        switch (this) {
+            case ONE_HALF:
+                return "½";
+            case ONE_THIRD:
+                return "⅓";
+            case TWO_THIRDS:
+                return "⅔";
+            case ONE_QUARTER:
+                return "¼";
+            case THREE_QUARTERS:
+                return "¾";
+            default:
+                return "";
+        }
+    }
